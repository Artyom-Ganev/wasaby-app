{
   "extends": "../tsconfig.base.json",
   "compilerOptions": {
      "module": "amd",
      "moduleResolution": "classic",
      "target": "es5",
      "lib": ["dom", "es5", "es2015"],
      "declaration": false,
      "noImplicitAny": false,
      "noUnusedLocals": true,
      "stripInternal": true,
      "sourceMap": false,
      "alwaysStrict": true,
      "traceResolution": false,
      "baseUrl": "./",
      "pretty": false,
      "diagnostics": false,
      "locale": "ru",
      "importHelpers": true,
      "experimentalDecorators": true
   },
   "include": [
      "**/*.ts"
   ]
}
